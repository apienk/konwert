#!/bin/bash -

if [ "$FILTERM" = in ]
then
trs -e '
	C\{`		\177Ĉ
	C`\{`		\177C`
	G\{`		\177Ĝ
	G`\{`		\177G`
	H\{`		\177Ĥ
	H`\{`		\177H`
	J\{`		\177Ĵ
	J`\{`		\177J`
	S\{`		\177Ŝ
	S`\{`		\177S`
	U\{`		\177Ŭ
	U`\{`		\177U`
	c\{`		\177ĉ
	c`\{`		\177c`
	g\{`		\177ĝ
	g`\{`		\177g`
	h\{`		\177ĥ
	h`\{`		\177h`
	j\{`		\177ĵ
	j`\{`		\177j`
	s\{`		\177ŝ
	s`\{`		\177s`
	u\{`		\177ŭ
	u`\{`		\177u`
'
else
trs -e '
	C`	Ĉ
	G`	Ĝ
	H`	Ĥ
	J`	Ĵ
	S`	Ŝ
	U`	Ŭ
	c`	ĉ
	g`	ĝ
	h`	ĥ
	j`	ĵ
	s`	ŝ
	u`	ŭ
'
fi
